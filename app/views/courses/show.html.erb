<div class="row">
  <div class="jumbotron">
    <h1 class="display-4"> <%= @course.name %> </h1>
    <p class="lead">This is a curriculum of a course taughted at [university_name] by [profesor_name], submited by <%= @course.author %>.</p>
    <hr class="my-4">
    <p>It uses <%= @course.description %> </p>
    <p class="lead">
      <%= link_to "Enroll", 
                        enroll_path(id: @course),
                          class: "btn btn-xs btn-success", method: :post %>
    </p>
  </div>
</div>


<div class="row">
  <div class = "col-sm-12">
  <h2> Resources </h1>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Link</th>
        <th scope="col">Completed</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @resources.each do |res| %>
        <td><%= res.title %></td>
        <td><%= res.link %></td>
        <td><input type="checkbox" value="completed"> </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  </div>
</div>

  <div class="row">
    <div class="col-sm-12">  <h2>  Attachments </h2> </div>
  </div>

  <div class="row"> 
   <div class = "col-sm-12">
    <% @attachments.each do |attachment| %>
       <div class="row">
         <div class="col-sm-12">
           <%= link_to("#{attachment.name}", '/download/' + attachment.id.to_s) %>
         </div>
       </div>
    </div>
  </div>
   <% end %>
 
<div class="row" style= "margin-top: 1vw;">
   <div class="col-sm-8"> 
     <%= form_for(@attachment) do |f| %>
      <div class="row form-group">
        <div class="col-sm-4">      
         <%= f.text_field :name, placeholder: "Attachment title", class: 'form-control'%>
        </div>
        <div class="col-sm-4">
          <%= f.file_field :attachment_path, class: 'form-control' %>
        </div>
        <div class="col-sm-4"> <%= f.submit "Add attachment", class: 'btn btn-success' %> </div>
      </div>
      <%= f.hidden_field :course_id %>
      <% end %>
  </div>  
  <div class="col-sm-4"> </div>
</div>